<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="bold_headline_large">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">32sp</item>
		<item name="android:lineHeight">48sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_medium">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">24sp</item>
		<item name="android:lineHeight">38sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_small">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_smallest">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.023</item>
	</style>

	<style name="body">
		<item name="android:fontFamily">@font/anonymous_pro_regular</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">24sp</item>
	</style>

	<style name="body_bold">
		<item name="android:fontFamily">@font/anonymous_pro_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">30sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_button">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="button">
		<item name="android:background">@drawable/bg_button_primary</item>
		<item name="android:textColor">@color/white</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">6dp</item>
		<item name="elevation">6dp</item>
	</style>

	<style name="button_outline">
		<item name="android:background">@drawable/bg_outline_black</item>
		<item name="android:textColor">@color/black</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">6dp</item>
		<item name="elevation">6dp</item>
	</style>


	<style name="SpinnerTheme">
		<item name="android:background">@drawable/spinner_icon</item>
	</style>

	<style name="reasoning_edit_text_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">top</item>
		<item name="android:inputType">textMultiLine</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:hint">Enter text</item>
		<item name="android:minLines">7</item>
		<item name="android:maxLines">7</item>
		<item name="android:background">@drawable/reasoning_edittext_background</item>
		<item name="android:fontFamily">@font/anonymous_pro_regular</item>
	</style>


	<style name="custom_radio_button_style">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:button">@null</item>
		<item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item>
		<item name="android:background">@drawable/radio_button_border</item>
		<item name="android:drawablePadding">15dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layoutDirection">rtl</item>
		<item name="android:paddingStart">15dp</item>
		<item name="android:paddingEnd">15dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="progress_bar" parent="Widget.AppCompat.ProgressBar">
		<item name="android:layout_centerInParent">true</item>
		<item name="android:elevation">10dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:indeterminateTint">@android:color/white</item>
		<item name="android:layout_gravity">center</item>
	</style>

</resources>